.container
  margin auto
  padding containerVerticalPadding containerHorizontalPadding

.row
  display flex
  flex-direction row
  flex-wrap wrap
  padding rowVerticalPadding rowHorizontalPadding

  .row
    margin 0 (- columnHorizontalPadding)

  &.stack
    stack()

  for device in devices
    +at(device)
      &.stack-{device}
        stack()


.columns
  padding columnVerticalPadding columnHorizontalPadding

  for device in devices
    for columnsToSpan in (1..gridColumns)
      +above(device)
        &.{device}-{columnsToSpan}
          column(columnsToSpan, gridColumns)



