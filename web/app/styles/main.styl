bg = gold

.grid-container
  font-weight bold
  background darken(bg, 20%)

  .row
    border 2px solid darken(bg, 60%)

    &:not(:first-of-type)
      border-top none

.columns
  background bg
  text-align center
  line-height 2

  &:not(:first-child)
    border-left 2px solid darken(bg, 20%)

  > *
    white-space nowrap
